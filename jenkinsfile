pipeline {
    agent {
        label 'linux_slave2'
    }
    tools {
        maven 'mymaven' // Specify the Maven version name as configured in Global Tool Configuration
    }
    stages {
        stage('Build Application') {
            steps {
                // Corrected Maven command
                sh 'mvn clean package'
            }
        }
        stage('Deploy in staging environment'){
            build job : 'Deploy_Application_Staging_Env'
        }
    }
    post {
        success {
            echo "Now archiving the artifacts"
            // Corrected typo from archieveArtifacts to archiveArtifacts
            archiveArtifacts artifacts: '**/*.war'
        }
    }
}
